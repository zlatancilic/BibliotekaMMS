<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cilic.zlatan.mylib" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/library"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddBookActivity"
            android:label="@string/title_activity_add_book"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cilic.zlatan.mylib.MainActivity" />

        </activity>
        <activity
            android:name=".ChangeEraseBook"
            android:label="@string/title_activity_change_erase_book"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cilic.zlatan.mylib.MainActivity" />
        </activity>
        <activity
            android:name=".SearchBookActivity"
            android:label="@string/title_activity_search_book"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cilic.zlatan.mylib.MainActivity" />
        </activity>

    </application>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
</manifest>
